<h1> Welcome Rails Blog </h1>
<% @posts.each do |post| %>
    <div class = "card mb-3">
        <div class= "card-body" >
            <div class="d-flex justify-content-between align-items-center">
                <h6><%= post.title %> </h6>
                    <span class="badge-light">
                    <%= link_to post.category.name, category_search_path(post.category.slug) %>
                    </span>
            </div>
            <div>
                <%= post.body.truncate(300) %>
            </div>
        </div>
        <div class ="card-footer">
            <span> published <%= time_ago_in_words(post.created_at) %></span>
            <span> by <%= post.user.email %> </span>
            <%= link_to "read more" , post_read_path(post.id) %>
            <div class= "d-flex justify-content-start">
                <% post.tags.each do |tag| %>
                    <span class="badge badge-warning mr-2">
                        <%= link_to tag.name,tag_search_path(tag.name) %> 
                    </span> 
                <% end %>
            </div>    
        </div>        
    </div>
<% end %>    

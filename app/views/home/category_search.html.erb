div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h2><%= @category.name %> </h2>
        <span class="badge-info">
            <%= time_ago_in_words(@category.created_at) %>
        </span>
    </div>
    <% @category.posts.each do |post| %>
        <div class= "card mb-3">
        <%= post.title %>
        </div>
    <% end %>    
    <div>
        <%= @category.description %>
    </div>
    <%= link_to "back", root_url %>
</div>
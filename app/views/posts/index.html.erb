
<h1>Posts</h1>
<%= link_to 'New Post', new_post_path %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Published</th>
      <th>Tags</th>
      <th>Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.category.blank? ? "No category" : post.category.name %></td>
        <td><%= post.published %></td>
        <td><%= post.all_tags %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post, class:"btn btn-dark" %></td>
        <% if authorize?(post) %>
        <td><%= link_to 'Edit', edit_post_path(post),class:"btn btn-dark" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
        <%end%>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>


